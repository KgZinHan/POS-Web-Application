@model IEnumerable<DateWiseSaleListModel>

@{
    ViewData["Title"] = "Date Wise Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom Js for this form -->
<script src="~/customjs/SaleDashboard/SaleDashboard.js"></script>

<div class="container-fluid">
    <button class="btn btn-info m-1" onclick="goBack()">
        Back
    </button>
    <section class="content">
        <div class="card">
            <div class="card-header"><h5>@ViewData["BranchName"] </h5></div>
            <div class="card-body p-1">
                <div class="row mt-3">
                    <div class="col-md-12 table-responsive" style="max-height: 500px">
                        <table id="example1" class="table table-bordered dataTable dtr-inline" aria-describedby="example1_info">
                            <thead>
                                <tr style="font-size: 16px">
                                    <th>
                                        No.
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Sale Amount
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => data.No)</td>
                                        <td>@Convert.ToDateTime(data.Date).ToString("dd MMM yyyy")</td>
                                        <td style="text-align: right">@Html.DisplayFor(modelItem => data.SaleAmount)</td>
                                        <td style="text-align: center">
                                            <a asp-action="ItemWiseSales" asp-controller="SaleDashboard"
                                               asp-route-cmpyId="@ViewData["CmpyId"]"
                                               asp-route-name="@ViewData["BranchName"]" asp-route-date="@data.Date" style="color : #31849B">...</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

