@model IEnumerable<ItemWiseSaleListModel>

@{
    ViewData["Title"] = "Item Wise Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Custom Js for this form -->
<script src="~/customjs/SaleDashboard/SaleDashboard.js"></script>

<div class="container-fluid">
    <button class="btn btn-info m-1" onclick="goBack()">
        Back
    </button>
    <section class="content">
        <div class="card">
            <div class="card-header"><h5>@ViewData["BranchName"] (@ViewData["Date"])</h5></div>
            <div class="card-body p-1">
                <div class="row mt-3">
                    <div class="col-md-12 table-responsive" style="max-height: 500px">
                        <table id="reportedDataTable" class="table table-bordered dataTable dtr-inline" aria-describedby="example1_info">
                            <thead>
                                <tr style="font-size: 16px">
                                    <th>
                                        No.
                                    </th>
                                    <th>
                                        Item Desc
                                    </th>
                                    <th>
                                        Qty
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => data.No)</td>
                                        <td>@Html.DisplayFor(modelItem => data.Item)</td>
                                        <td>@Html.DisplayFor(modelItem => data.Qty)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

