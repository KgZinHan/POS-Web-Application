@model CurrencyModelList
<form asp-action="Edit" asp-controller="Currency">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title" id="popupDialogLabel">Edit Currency</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="text-md-center">
                        <tr style="font-size: 14px">
                            <th style="width: 100px;text-align: left">
                                @Html.DisplayNameFor(model => model.Currency.CurrId)
                            </th>
                            <th style="text-align: left">
                                <span style="color: red">*&nbsp;</span>@Html.DisplayNameFor(model => model.Currency.CurrTyp)
                            </th>
                            <th style="text-align: left">
                                <span style="color: red">*&nbsp;</span>@Html.DisplayNameFor(model => model.Currency.CurrCde)
                            </th>
                            <th style="text-align: left">
                                <span style="color: red">*&nbsp;</span>@Html.DisplayNameFor(model => model.Currency.CurrRate)
                            </th>
                        </tr>
                    </thead>
                    <tbody class="text-md-center">
                        <tr style="font-size: 12px">
                            <td>
                                <input asp-for="@Model.Currency.CurrId" class="form-control form-control-sm" readonly/>
                            </td>
                            <td>
                                <input asp-for="@Model.Currency.CurrTyp" class="form-control form-control-sm" />
                            </td>
                            <td>
                                <input asp-for="@Model.Currency.CurrCde" class="form-control form-control-sm" />
                            </td>
                            <td>
                                <input id="decimalInput01" asp-for="@Model.Currency.CurrRate" type="number" step="0.01" min="0" class="form-control form-control-sm" onblur="formatDecimal('decimalInput01')"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" onclick="cleanDefaultContainer()">Close</button>
            <button type="submit" class="btn btn-info">Save changes</button>
        </div>
    </div>
</form>
