<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @*<meta http-equiv="refresh" content="5">*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
     <!-- Select2 -->
    @*<link rel="stylesheet" href="~/lib/adminlte3/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/lib/adminlte3/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css"> *@
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed sidebar-closed sidebar-collapse">
    <div class="wrapper">
        <nav class="navbar navbar-expand main-header navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                        </li>
                        <li class="nav-item">
                            <b class="nav-link">Database-@ViewData["Database"]</b>
                        </li>
                        <li class="nav-item">
                            <b class="nav-link">Date-@ViewData["Business Date"]</b>
                        </li>
                    </ul>
                </div>

                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">POS in cloud</a>
            </div>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4 sidebar-closed sidebar-collapsed">
            <div class="sidebar sidebar-collapse">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item user-panel pb-1">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>@ViewData["Username"]</p>
                            </a>
                        </li>
                        @if (new[] { "accessLvl1", "accessLvl2" }.Contains(ViewData["User Role"]?.ToString()))
                        {
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-home"></i>
                                    <p>Home</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Sale" asp-action="Index" class="nav-link">
                                    <i class="nav-icon fas fa-tags"></i>
                                    <p>Sale</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-cubes"></i>
                                    <p>
                                        Stock Item Setup<i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>

                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="Stock" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-cube"></i>
                                            <p>Stock</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ServiceItem" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-toolbox"></i>
                                            <p>Services Item</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="StockPackage" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-th"></i>
                                            <p>Stock Package</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="StockBOM" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-box"></i>
                                            <p>Stock Assembly</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="StockCategory" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-folder"></i>
                                            <p>Stock Category</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="StockGroup" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-folder"></i>
                                            <p>Stock Group</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Location" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-map-marker"></i>
                                            <p>Location</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Currency" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-dollar-sign"></i>
                                            <p>Currency</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-warehouse"></i>
                                    <p>
                                        Inventory<i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>

                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="GoodReceive" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-box-open"></i>
                                            <p>Good Receive</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="GoodReturn" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-archive"></i>
                                            <p>Good Return</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ICIssue" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-info-circle"></i>
                                            <p>IC-Issue</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ICTransfer" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-truck-moving"></i>
                                            <p>IC-Transfer</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ICAdjust" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-adjust"></i>
                                            <p>IC-Adjust</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ICAssembly" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-boxes"></i>
                                            <p>IC-Assembly</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Supplier" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-user-tie"></i>
                                            <p>Supplier</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Customer" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-user"></i>
                                            <p>Customer</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ICReason" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-folder"></i>
                                            <p>IC-Reason</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-file"></i>
                                    <p>
                                        Reports<i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="CategorySaleReport" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-file-invoice"></i>
                                            <p>Category Sale</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="SalesSummaryReport" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-file-invoice"></i>
                                            <p>Sales Summary</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="SupplierSalesReport" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-file-invoice"></i>
                                            <p>Supplier Sales Report</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-tasks"></i>
                                    <p>
                                        User Setup<i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="User" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-users"></i>
                                            <p>Users</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="MenuGroup" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-layer-group"></i>
                                            <p>User Menu Group</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="MenuAccess" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-sitemap"></i>
                                            <p>User Menu Access</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fas fa-cogs"></i>
                                    <p>
                                        Settings<i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-controller="AutoNumber" asp-action="Index" class="nav-link">
                                            <i class="nav-icon fas fa-list-ol"></i>
                                            <p>Auto Number</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                        }
                        <li class="nav-item">
                            <a asp-controller="LogOut" asp-action="Index" class="nav-link" onclick="return confirm('Are you sure to log out?')">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Log Out</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <main role="main" class="pb-2 main-header" style="min-height: 85vh">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted main-header">
            <div class="container">
                &copy; 2023 - POS Web Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <!-- jQuery -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <!-- jQuery UI 1.11.4 -->
        <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
        <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
        <script>
            $.widget.bridge('uibutton', $.ui.button)
        </script>
        <!-- Bootstrap 4 -->
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- overlayScrollbars -->
        <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
         <!-- Select2 -->
        @*<script src="~/lib/adminlte3/plugins/select2/js/select2.full.min.js"></script> *@
        <!-- AdminLTE App -->
        <script src="~/dist/js/adminlte.js"></script>
        <!-- DataTables  & Plugins -->
        <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    </div>
</body>
</html>
